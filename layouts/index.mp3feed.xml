<!-- http://localhost:1313/feed/mp3/index.xml -->  
<!-- https://almartin82.github.io/safe-to-eat/feed/mp3/index.xml -->  

<rss version="2.0"
    xmlns:itunes="http://www.itunes.com/dtds/podcast-1.0.dtd">
  <channel>
    <title>{{ .Site.Title }}</title>
    <itunes:owner>
        <itunes:email>{{ .Site.Params.Author.Email }}</itunes:email>
    </itunes:owner>
    <itunes:author>{{ .Site.Params.Author.Name }}</itunes:author>
    <description> {{ .Site.Params.Podcast.Description}}</description>
    <itunes:image href="{{ .Site.BaseURL }}images/logo.png"/>    
    <language>{{ .Site.LanguageCode }}</language>
    <link>{{ .Site.BaseURL }}</link>
    <itunes:explicit>{{ .Site.Params.Podcast.Explicit }}</itunes:explicit>

    {{- range where site.RegularPages "Type" "in" site.Params.mainSections }}

      <item>
        <title>{{ .Params.show_source }} {{ .Params.original_title }}</title>
        <description>Short description about the episode</description>
        <pubDate>Tue, 02 Oct 2016 19:45:01</pubDate>
        <guid isPermaLink="false">insert a unique id for the episode</guid>
        <enclosure url="{{ .Params.podcast_url }}" type="{{ .Params.audio_type }}" length="0"/>
      </item>

    {{- end }}
  </channel>
</rss>